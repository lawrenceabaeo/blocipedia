<div class="pure-u-1-1 bloccipedia-form">

  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {:class => 'pure-form pure-form-aligned'} ) do |f| %>
      <fieldset>
        <div class="pure-control-group">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true %>
        </div>

        <div class="pure-control-group">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="pure-controls">
            <%= f.label :remember_me, :class => 'pure-checkbox' do %>
              <%= f.check_box :remember_me %>
              Remember Me
            <% end %>  
          </div>
        <% end -%>

        <div class="pure-controls">
          <%= f.submit "Sign in", :class => 'pure-button pure-button-primary'%>
        </div>
      </fieldset>
    <% end %>
  
  <%= render "devise/shared/links" %>

</div>