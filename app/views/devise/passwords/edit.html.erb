<div class="pure-u-1-1 bloccipedia-form">

  <h2>Change your password</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'pure-form pure-form-aligned'} ) do |f| %>
      <fieldset>
        <%= devise_error_messages! %>
        
        <%= f.hidden_field :reset_password_token %>

        <div class="pure-control-group">
          <%= f.label :password, "New password" %>
          <%= f.password_field :password, :autofocus => true %>
        </div>

        <div class="pure-control-group">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="pure-controls">
          <%= f.submit "Change my password", :class => 'pure-button pure-button-primary'%>
        </div>
      </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>

</div>